                <Run Foreground="#FF837C7C" FontWeight="Bold" FontStyle="Italic" Text="Reservations"/>
            </TextBlock>
            <TextBox x:Name="textBox_Copy" HorizontalAlignment="Left" Margin="68,104,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="44" Width="962" RenderTransformOrigin="0.525,0.652"/>
            <Button x:Name="button"  Background="LightGreen" BorderBrush="Black" Content="Search"  HorizontalAlignment="Left" Margin="1059,102,0,0" VerticalAlignment="Top" Height="46" Width="153" FontSize="25" Click="button_Click"/>
