            </ListBox>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="68,193,0,0" TextWrapping="Wrap" Text="Reservation list" VerticalAlignment="Top" Height="48" Width="194" FontSize="25" SelectionChanged="textBlock1_SelectionChanged"/>
            <Button x:Name="button1" FontSize="25
                    " Background="LightGreen" Content="See reservation info" BorderBrush="Black" HorizontalAlignment="Left" Margin="68,530,0,0" VerticalAlignment="Top" Width="302" Height="66" Click="button1_Click"/>
            <Button x:Name="button1_Copy" FontSize="25 " Background="LightCoral" BorderBrush="Black"  Content="Go back" HorizontalAlignment="Left" Margin="910,530,0,0" VerticalAlignment="Top" Width="302" Height="66" Click="button1_Copy_Click"/>
            <Grid HorizontalAlignment="Left" Height="100" Margin="32,549,0,0" VerticalAlignment="Top" Width="100"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="100" Margin="959,341,-303,0" VerticalAlignment="Top" Width="100" Grid.Column="1"/>

    </Grid>
</Page>
