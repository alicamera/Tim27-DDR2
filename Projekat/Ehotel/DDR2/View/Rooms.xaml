<Page
    x:Class="DDR2.View.Rooms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDR2.HotelBaza.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="1274.333" Height="924"
    Loaded="Page_Loaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,10,169.333,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBox PlaceholderText="Search rooms" FontSize="25" Margin="0,0,-808,0"/>
        <Button HorizontalAlignment="Right" Background="LightGreen" BorderBrush="Black" FontSize="25" Margin="0,0,-970,0" Width="162" Height="50" Click="Button_Click">Search</Button>
        <Button Grid.Row="1" FontSize="25" Height="50" Width="1270" Background="LightGray" BorderBrush="Black" Name="BtnAddRoom" Click="BtnAddRoom_Click" Margin="0,0,-970,0">Add New Room</Button>
        <TextBlock Text="Rooms" FontSize="40" VerticalAlignment="Center" Grid.Row="2" Margin="0,16,-970,-29" Height="63"/>

        <Grid Margin="0,79,-970,-84" Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" FontSize="25" Grid.Column="0">Room Name</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="25" Grid.Column="3">Price</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="25" Grid.Column="1">Room Number</TextBlock>
            <TextBlock HorizontalAlignment="Left" FontSize="25" Grid.Column="2">Room Type</TextBlock>
        </Grid>

        <ListView Margin="0,134,-970,-764" Grid.Row="2"
            x:Name="RoomListView"
            IsItemClickEnabled="True">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" >
                        <TextBlock Text="{Binding Naziv}" FontSize="25" Width="300"/>
                        <TextBlock Text="{Binding Broj}" FontSize="25" Width="300"/>
                        <TextBlock Text="{Binding Tip}" FontSize="25" Width="300"/>
                        <TextBlock Text="{Binding Cijena}" FontSize="25" Width="300"/>
                        <Button Width="200" FontSize="25">Edit</Button>
                        <Button Width="200" FontSize="25">Details</Button>
                        <Button Width="200" FontSize="25">Delete</Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>
    </Grid>
</Page>
