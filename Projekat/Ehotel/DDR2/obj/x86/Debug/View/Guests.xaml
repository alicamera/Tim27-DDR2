<Page
    x:Class="DDR2.View.Guests"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDR2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,10,169.333,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox PlaceholderText="Search guests" FontSize="25" Margin="0,0,-808,0"/>
        <Button x:ConnectionId='1' HorizontalAlignment="Right" Background="LightGreen" BorderBrush="Black" FontSize="25" Margin="0,0,-970,0" Width="162" Height="50"                     >Search</Button>
        <Button x:ConnectionId='2' Grid.Row="1" FontSize="25" Height="50" Width="320" Background="LightGray" BorderBrush="Black" Name="btnAddGuest"                           Margin="300,0,-320,0">Add Guest</Button>
        <Button x:ConnectionId='3' Grid.Row="1" FontSize="25" Height="50" Width="335" Background="LightGray" BorderBrush="Black" Name="btnRemoveGuest"                              Margin="935,0,-970,0">Remove Guest</Button>
        <Button x:ConnectionId='4' Grid.Row="1" FontSize="25" Height="50" Width="315" Background="LightGray" BorderBrush="Black" Name="btnEditGuest"                            Margin="620,0,-635,0">Edit Guest</Button>
        <Button x:ConnectionId='5' x:Name="btnGoBack" Grid.Row="1" Height="50" BorderBrush="Black" FontSize="25" Content="Go Back"                         Background="LightCoral" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300"/>
        <TextBlock Text="Guests" FontSize="40" VerticalAlignment="Center" Grid.Row="2" Margin="0,16,-970,-29" Height="63"/>
        <ListView x:ConnectionId='6' Margin="0,84,-970,-84" Grid.Row="2"
            x:Name="GuestListView"
            IsItemClickEnabled="True">
            <ListView.Template>
                <ControlTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock HorizontalAlignment="Center" FontSize="25" Grid.Column="0">Guest Name</TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="25" Grid.Column="3">Country</TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="25" Grid.Column="1">Guest surname</TextBlock>
                            <TextBlock HorizontalAlignment="Center" FontSize="25" Grid.Column="2">E-mail</TextBlock>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </ListView.Template>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>

