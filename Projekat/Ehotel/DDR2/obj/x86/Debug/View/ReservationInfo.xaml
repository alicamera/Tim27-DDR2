            <TextBlock x:ConnectionId='16' x:Name="textBlock1_Copy10" HorizontalAlignment="Left" Margin="793,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium" Text="Guest info"/>
            <Border BorderBrush="{ThemeResource AppBarToggleButtonBackgroundCheckedPointerOver}" BorderThickness="1" HorizontalAlignment="Left" Height="157" Margin="793,306,0,0" VerticalAlignment="Top" Width="341" Background="{ThemeResource ComboBoxDropDownBorderBrush}">
                <TextBlock x:ConnectionId='18' x:Name="textBlock1_Copy11" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="20" FontStyle="Italic" FontWeight="Medium" Text="Name:" Margin="8.667,8.667,0,0"/>
            </Border>
            <TextBlock x:ConnectionId='17' x:Name="textBlock1_Copy12" HorizontalAlignment="Left" Margin="793,384,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="27" Width="253"                                                FontSize="20" FontWeight="Medium" FontStyle="Italic">
                <Run Text=" "/>
                <Run Text="Surname:"/>
            </TextBlock>
        </Grid>

    </Grid>
</Page>

