            <Run Foreground="#FF837C7C" FontWeight="Bold" FontStyle="Italic" Text="Reservation info"/>
        </TextBlock>
        <Grid Margin="50,10,-479,0" Height="620" VerticalAlignment="Top" HorizontalAlignment="Left" Width="1657" RenderTransformOrigin="0.501,0.533">
            <Grid HorizontalAlignment="Left" Height="100" Margin="713,10,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBlock x:ConnectionId='2' x:Name="textBlock1" HorizontalAlignment="Left" Margin="51,94,0,0" TextWrapping="Wrap" Text="Reservation ID:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
            <TextBlock x:ConnectionId='3' x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="51,162,0,0" TextWrapping="Wrap" Text="Room type:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
