            <TextBlock x:ConnectionId='7' x:Name="textBlock1_Copy4" HorizontalAlignment="Left" Margin="403,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium">
                <Run Text="No. of "/>
                <Run Text="adults"/>
                <Run Text=":"/>
            </TextBlock>
            <TextBlock x:ConnectionId='8' x:Name="textBlock1_Copy5" HorizontalAlignment="Left" Margin="403,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium">
                <Run Text="No. of "/>
                <Run Text="children:"/>
            </TextBlock>
            <TextBlock x:ConnectionId='9' x:Name="textBlock1_Copy6" HorizontalAlignment="Left" Margin="51,306,0,0" TextWrapping="Wrap" Text="Parking:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
            <TextBlock x:ConnectionId='10' x:Name="textBlock1_Copy7" HorizontalAlignment="Left" Margin="51,370,0,0" TextWrapping="Wrap" Text="Pool:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
            <TextBlock x:ConnectionId='11' x:Name="textBlock1_Copy8" HorizontalAlignment="Left" Margin="403,306,0,0" TextWrapping="Wrap" Text="Check-in date:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
            <TextBlock x:ConnectionId='12' x:Name="textBlock1_Copy9" HorizontalAlignment="Left" Margin="403,370,0,0" TextWrapping="Wrap" Text="Check-out date:" VerticalAlignment="Top" Height="36" Width="251"                                                FontSize="25" FontStyle="Italic" FontWeight="Medium"/>
