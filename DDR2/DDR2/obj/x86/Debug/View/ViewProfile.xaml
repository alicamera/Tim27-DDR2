<Page
    x:Class="DDR2.View.ViewProfile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DDR2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="3025" Width="1320">
    <ScrollViewer HorizontalScrollBarVisibility="Visible" HorizontalContentAlignment="Stretch" VerticalScrollBarVisibility="Visible" VerticalScrollMode="Enabled" Margin="0,10,0,2350.333" RenderTransformOrigin="0.5,0.5">
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="1320" Width="1285">
            <Grid.RowDefinitions>
                <RowDefinition Height="470"></RowDefinition>
                <RowDefinition Height="350"></RowDefinition>
                <RowDefinition Height="200" ></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox HorizontalAlignment="Stretch" Grid.Row="0" Background="LightGreen" IsReadOnly="True" Text="Welcome" VerticalAlignment="Top" FontSize="40" Height="75"></TextBox>
            <TextBox HorizontalAlignment="Stretch" Grid.Row="0" Background="LightGray" IsReadOnly="True" Text="Contact Information"  FontSize="25" Height="40" Margin="0,75,0,355"></TextBox>
            <TextBox HorizontalAlignment="Stretch" Grid.Row="1" Background="LightGray" IsReadOnly="True" Text="Basic Information" VerticalAlignment="Top" FontSize="25" Height="40"></TextBox>
            <TextBox HorizontalAlignment="Stretch" Grid.Row="2" Background="LightGray" IsReadOnly="True" Text="Username And Password" VerticalAlignment="Top" FontSize="25" Height="40"></TextBox>
            <TextBlock Grid.Row="0" FontSize="20" Height="30" Width="100" HorizontalAlignment="Left" Margin="10,130,0,240">Address</TextBlock>
            <TextBlock Grid.Row="0" FontSize="20" Height="30" Width="100" HorizontalAlignment="Left" Margin="10,190,0,180">Country</TextBlock>
            <TextBlock Grid.Row="0" FontSize="20" Height="30" Width="100" HorizontalAlignment="Left" Margin="10,175,0,35">City</TextBlock>
            <TextBlock Grid.Row="0" FontSize="20" Height="30" Width="100" HorizontalAlignment="Left" Margin="10,317,0,53">Email</TextBlock>
            <TextBlock Grid.Row="0" FontSize="20" Height="30" Width="150" HorizontalAlignment="Left" Margin="10,405,0,35">Phone number</TextBlock>
            <TextBox Height="30" Margin="223,163,765,275"/>
            <TextBox Height="30" Margin="223,225,765,213"/>
            <TextBox Height="30" Margin="223,350,765,88"/>
            <TextBox Height="30" Margin="223,288,765,150"/>
            <TextBox Height="30" Margin="223,405,765,33"/>

            <TextBlock Grid.Row="1" Height="30" FontSize="20" Width="100" Margin="10,70,1170,200">First Name</TextBlock>
            <TextBlock Grid.Row="1" Height="30" FontSize="20" Width="100" Margin="10,135,1170,135">Last Name</TextBlock>
            <TextBlock Grid.Row="1" Height="30" FontSize="20" Width="100" Margin="10,200,1170,70">Gender</TextBlock>
            <TextBlock Grid.Row="1" Height="30" FontSize="20" Width="100" Margin="10,260,1170,10">Birth Date</TextBlock>
            <TextBox Grid.Row="1" Height="30" Width="300" Margin="220,258,760,10"></TextBox>
            <TextBox Grid.Row="1" Height="30" Width="300" Margin="220,133,760,135"></TextBox>
            <TextBox Grid.Row="1" Height="30" Width="300" Margin="220,70,760,198"></TextBox>
            <RadioButton Grid.Row="1" Margin="225,219,0,99">Male</RadioButton>
            <RadioButton Grid.Row="1" Margin="400,194,0,74">Female</RadioButton>

            <TextBlock Grid.Row="2" Height="30" FontSize="20" Width="100" Margin="10,87,1170,83">Username</TextBlock>
            <TextBox x:ConnectionId='1' x:Name="txtReNew" Grid.Row="2" Height="30" Width="300" Margin="220,389,760,-221" Visibility="Collapsed"></TextBox>
            <Button x:ConnectionId='2' Name="btnChangePass"                             Width="515" FontSize="20" Height="40" Grid.Row="2" Margin="10,160,0,0">Change Password</Button>
            <TextBlock x:ConnectionId='3' x:Name="labelCurrent" Grid.Row="2" Height="30" FontSize="20" Width="100" Margin="10,250,1170,-80" Visibility="Collapsed">Current</TextBlock>
            <TextBlock x:ConnectionId='4' x:Name="labelNew" Grid.Row="2" Height="30" FontSize="20" Width="100" Margin="10,323,1170,-153" Visibility="Collapsed">New</TextBlock>
            <TextBlock x:ConnectionId='5' x:Name="labelRetype" Grid.Row="2" Height="30" FontSize="20" Width="100" Margin="10,389,1170,-219" Visibility="Collapsed">Retype New</TextBlock>
            <TextBox x:ConnectionId='6' x:Name="txtNew" Grid.Row="2" Height="30" Width="300" Margin="220,323,760,-155" Visibility="Collapsed"></TextBox>
            <TextBox x:ConnectionId='7' x:Name="CurrentPass" Grid.Row="2" Height="30" Width="300" Margin="220,250,760,-82" Visibility="Collapsed"></TextBox>
            <TextBox Grid.Row="2" Height="30" Width="300" Margin="220,85,760,83"></TextBox>
            <Button x:ConnectionId='8' Name="btnSave" Background="LightGreen"                       Width="230" FontSize="20" Height="65" Grid.Row="2" Margin="840,370,0,-235">Save Changes</Button>
            <Button x:ConnectionId='9' Name="btnBack" Background="LightCoral"                       Width="160" FontSize="20" Height="65" Grid.Row="2" Margin="1100,370,0,-235">Go Back</Button>
            <Button x:ConnectionId='10' Name="btnSavePass" Background="LightGreen"                           Width="220" FontSize="20" Height="65" Grid.Row="2" Margin="590,370,0,-235">Save Password</Button>
        </Grid>
    </ScrollViewer>
</Page>

